"Vim settings - ???

call plug#begin('~/.vim/plugged')
Plug 'dylanaraps/wal.vim'
call plug#end()

:syntax on
set backspace=2
set autoindent
set smartindent
set tabstop=4
set shiftwidth=2
"set expandtab						" turn tab to space
set incsearch
set nowrap
set number
set showcmd
set incsearch
set hlsearch
set nocompatible
set t_Co=256 						" use 256 colours
set ignorecase					" ignore case when searching
set background=dark
"set cursorline
colorscheme wal

set statusline=%F%m%r%h%w\ %=%y\ %l\/%L\ \ %p%%
set laststatus=2

filetype on
filetype plugin on
set ofu=syntaxcomplete#Complete

